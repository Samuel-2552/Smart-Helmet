		u8g2.drawFrame(2,17,124,24);
		u8g2.drawStr(46,6,"Loading");
		u8g2.drawStr(69,49,"%");
		// Loading Animation
		while (s <=12)
		{
			percent = (s*100)/10;
			sprintf(pString,"%d ",percent);

			u8g2.drawBox(4,19,s*10,20);
